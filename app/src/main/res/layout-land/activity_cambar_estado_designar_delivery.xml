<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragmentos.vistas.cambar_estado_designar_delivery">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/codigoPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="codigoPEdido" />

        <TextView
            android:id="@+id/nombreTienda"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NombreTienda" />

        <TextView
            android:id="@+id/metodoEntrega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MetodoEntrega" />

        <TextView
            android:id="@+id/metodoPago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="metodoPago" />

        <TextView
            android:id="@+id/direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="direccion" />

        <TextView
            android:id="@+id/comentario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="comentario" />


        <TextView
            android:id="@+id/tiendaNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tiendaNombre" />

        <TextView
            android:id="@+id/tiendaNumero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tiendaNumero" />

        <TextView
            android:id="@+id/TiendaDireccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TiendaDireccion" />

        <TextView
            android:id="@+id/totalPagar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="totalPagar" />


        <Button
            android:id="@+id/aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aceptar" />

        <Button
            android:id="@+id/rechazar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rechazar" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>